{% extends 'base.html.twig' %}

{% block title %}Mes adresses de facturation{% endblock %}

{% block body %}
<div class="container mx-auto">
    <h1 class="text-center">Mes adresses de facturation</h1>
    <table class="table">
        <thead>
            <tr>
                {% if is_granted('ROLE_ADMIN')%}
                <th>Id</th>
                {% endif %}
                <th>Nom</th>
                <th>Numero_rue</th>
                <th>Rue</th>
                <th>Codepostal</th>
                <th>Ville</th>
                <th>Pays</th>
                <th>Infocomplementaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for adresse_facturation in app.user.adresseFacturation %}
            <tr>
                {% if is_granted('ROLE_ADMIN')%}
                <td>{{adresse_facturation.id }}</td>
                {% endif %}
                <td>{{ adresse_facturation.nom }}</td>
                <td>{{ adresse_facturation.numeroRue }}</td>
                <td>{{ adresse_facturation.rue }}</td>
                <td>{{ adresse_facturation.codepostal }}</td>
                <td>{{ adresse_facturation.ville }}</td>
                <td>{{ adresse_facturation.pays }}</td>
                <td>{{ adresse_facturation.infocomplementaire }}</td>
                <td>
                    <a href="{{ path('app_adresse_facturation_show', {'id': adresse_facturation.id}) }}">Details</a>
                    <a href="{{ path('app_adresse_facturation_edit', {'id': adresse_facturation.id}) }}">Modifier</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<a href="{{ path('app_adresse_facturation_new') }}">Cr√©er</a>
{% endblock %}