{% extends "facture.html.twig" %}

{% block body %}
<h2>Votre facture n°{{facture.getOrderNumber}}</h2>
<hr>

<div>
    <strong class="text-left">THEBOUTIQ! <br> 9 boulevard de la boissiere <br> 93130 Noisy-Le-Sec <br> FR </strong>
</div>

<h5>Votre adresse de livraison :</h5>
<p>{{facture.livraisonAdresse|raw}}</p>

<h5 class="right">Votre adresse de facturation :</h5>
<p class="right">{{facture.facturationAdresse|raw}}</p>


<div class="produit">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Produit</th>
                <th scope="col">Quantité</th>
                <th scope="col">Prix unitaire</th>
                <th>TVA unitaire</th>
                <th scope="col">Sous total</th>
            </tr>
        </thead>
        <tbody>
            {% for produit in facture.commandeProduits %}
            <tr>
                <th>{{produit.monProduit}}</th>
                <td>{{produit.quantite}}</td>
                <td>{{produit.prix|number_format(2)}} €</td>
                <td>{{(0.20 * produit.prix)/(1 + 0.20)|round|number_format(2) }} €</td>
                <td>{{ produit.total|number_format(2)}} €</td>
            </tr>
        </tbody>
    </table>
    {% endfor %}
</div>
<h5>Les informations de livraison</h5>
<p>{{facture.TransporteurNom}}</p>
<p>{{facture.TransporteurTarif}}</p>
{% endblock %}

{% block css %}
<style>
    h2 {
        color: brown;
        font-weight: bolder;
        text-align: center;
        margin-bottom: 20px;
    }

    p {
        text-align: left;
    }

    .produit {
        margin: 100px;
    }

    .right {
        text-align: right;
    }
</style>
{% endblock %}