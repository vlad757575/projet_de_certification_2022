{% extends 'base.html.twig' %}

{% block title %} Mes informations Personnelles{% endblock %}



{% block body %}

<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{path('index')}}">Accueil</a></li>
        <li class="breadcrumb-item"><a href="{{path('mon_compte')}}">Mon compte</a></li>
        <li class="breadcrumb-item current-page" aria-current="page">Mes informations</li>
    </ol>
</nav>
<div>
    <div>
        <h2>Mes informations Personnelles</h2>
        <table class="table">
            <tbody>
                {% for utilisateur in utilisateurs %}
                <tr>
                    <th>Id</th>
                    <td>{{ utilisateur.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ utilisateur.email }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ utilisateur.roles ? utilisateur.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>{{ utilisateur.password }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ utilisateur.nom }}</td>
                </tr>
                <tr>
                    <th>Prenom</th>
                    <td>{{ utilisateur.prenom }}</td>
                </tr>
                <tr>
                    <th>DateNaissance</th>
                    <td>{{ utilisateur.dateNaissance ? utilisateur.dateNaissance|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>IsVerified</th>
                    <td>{{ utilisateur.isVerified ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>Telephone</th>
                    <td>{{ utilisateur.telephone }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% endblock %}