<!DOCTYPE html>
<html lang="fr">

<head>
    <title>{% block title%} mon site web {% endblock %} </title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="keywords" content="e-commerce">
    <meta name="description" content="Theboutiq! est une entreprise Française  qui s'engage à fournir un service  de qualité.  100% made in France. Livraison sous 48-72 heures. Retours gratuits sous 30 jours ! ">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    {% block css %}
    <!-- Bootstrap  and CSS -->
    <!-- <link rel="stylesheet" href="{{asset('formulars-style.css') }}"> -->
    <link rel="stylesheet" href="{{asset('bootstrap.css')}}">
    <link rel="stylesheet" href="{{asset('nav-bars.css')}}">
    <link rel="stylesheet" href="{{asset('formulars-style.css')}}">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kumbh+Sans:wght@400;700&family=Playfair+Display&family=Source+Sans+Pro:wght@300&display=swap" rel="stylesheet">



    {% endblock %}
</head>


<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light my-navbar">
            <div class="container-fluid">
                <a class="navbar-brand" href="#"><img src="{{asset('logos/logo-theboutiq3.png')}}" style='width: 100px;' class="logo" alt=""></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse " id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link active link-style" aria-current="page" href="{{path('index')}}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link link-style" href="{{path('app_produit_index')}}">Produit</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link link-style" href="{{path('app_contact')}}">Contact</a>
                        </li>

                        {% if is_granted('ROLE_USER') %}

                        <li class="nav-item">
                            <a href="{{path('mon_compte')}}" class="nav-link link-style">Mon compte {{ app.user.prenom }}</a>
                        </li>

                        <li><a class="nav-link link-style" href="{{path('app_panier')}}">Panier</a></li>

                        <li class=" nav-item">
                            <a href="{{ path('app_logout') }}" class="nav-link link-style">Déconnexion</a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a href="{{path('admin')}}" class="nav-link link-style">Administrateur</a>
                        </li>

                        {% endif %}

                        {% else %}

                        <li class="nav-item">
                            <a class="nav-link link-style" href="{{path('login')}}">Connexion</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link link-style" href="{{path('register')}}">Inscription</a>
                        </li>

                        {% endif %}

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    {% block body %}
    {% endblock %}
    <footer>

        <!--bootstrap navbar -->
        <div class="container">
            <div class="my-footer">
                <nav class="navbar navbar-expand-lg navbar-light my-navbar my-navbar-bottom">
                    <button class="navbar-toggler  mx-auto" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav mx-auto">
                            <a class="nav-item nav-link link-style" href="{{path('app_mentions')}}">Mentions légales</a>
                            <a class="nav-item nav-link link-style" href="{{path('app_cguv')}}">Conditions générales de vente et d'utilisation</a>
                            <a class="nav-item nav-link link-style" href="{{path('app_faq')}}">FAQ</a>
                        </div>
                    </div>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav mx-auto">
                            <a href="https://www.facebook.com/" class="nav-item nav-link link-style" target="_blank"><i class="bi bi-facebook "></i></a>
                            <a href="https://www.instagram.com/" class="nav-item nav-link link-style" target="_blank"><i class="bi bi-instagram "></i></a>
                            <a href="https://twitter.com/?lang=fr" class="nav-item nav-link link-style" target="_blank"> <i class="bi bi-twitter "></i></a>
                        </div>


                    </div>
                </nav>

            </div>
        </div>
    </footer>


    {% block javascript %}
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->

    <script src="{{asset('bootstrap.bundle.min')}}"></script>
    <script src="{{asset('formular-script.js')}}"></script>
    <!-- <script src="/script.js"></script> -->
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/axentix@2.0.1/dist/axentix.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    {% endblock %}
</body>

</html>